<style>
  /* ... (Previous styles remain but we override nav-list and add nav-indicator) */
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: var(--z-fixed);
    padding: var(--spacing-4) 0;
    background: rgba(10, 10, 15, 0.8);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-bottom: 1px solid var(--color-border);
  }
  
  .header-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-6);
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  .logo {
    display: flex;
    align-items: center;
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    letter-spacing: -0.02em;
  }
  
  .logo-text {
    color: var(--color-text-primary);
  }
  
  .logo-dot {
    color: var(--color-tech);
    font-size: var(--font-size-3xl);
  }
  
  .nav-list {
    display: flex;
    list-style: none;
    margin: 0;
    padding: var(--spacing-1) 0;
    gap: var(--spacing-1);
    position: relative;
    background: rgba(255, 255, 255, 0.03);
    border-radius: var(--radius-full);
    border: 1px solid rgba(255, 255, 255, 0.05);
  }
  
  .nav-indicator {
    display: block;
    position: absolute;
    top: 4px;
    left: 4px;
    height: 32px;
    background: var(--color-tech);
    border-radius: var(--radius-full);
    z-index: 0;
    transition: all 0.4s cubic-bezier(0.25, 1, 0.5, 1);
    opacity: 0;
    pointer-events: none;
  }
  
  .nav-list li {
    position: relative;
    z-index: 1; /* Above indicator */
  }
  
  .nav-link {
    display: block;
    padding: var(--spacing-2) var(--spacing-6);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    color: var(--color-text-secondary);
    border-radius: var(--radius-full);
    transition: color 0.2s ease;
    text-decoration: none;
  }
  
  .nav-link:hover {
    color: var(--color-text-primary);
  }
  
  .nav-link.active {
    color: white;
  }
  
  .lang-selector {
    position: relative;
    margin-left: var(--spacing-4);
  }
  
  .lang-current {
    display: flex;
    align-items: center;
    gap: var(--spacing-2);
    padding: var(--spacing-2) var(--spacing-3);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-full);
    color: var(--color-text-secondary);
    cursor: pointer;
    font-size: var(--font-size-sm);
    transition: all var(--transition-fast);
  }
  
  .lang-current:hover {
    border-color: var(--color-tech);
    color: var(--color-text-primary);
  }
  
  .lang-flag {
    font-size: 1.1rem;
  }
  
  .lang-arrow {
    transition: transform var(--transition-fast);
  }
  
  .lang-selector:hover .lang-arrow {
    transform: rotate(180deg);
  }
  
  .lang-dropdown {
    position: absolute;
    top: calc(100% + var(--spacing-2));
    right: 0;
    min-width: 140px;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
    opacity: 0;
    visibility: hidden;
    transform: translateY(-8px);
    transition: all var(--transition-fast);
    z-index: 100;
    overflow: hidden;
  }
  
  .lang-selector:hover .lang-dropdown {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }
  
  .lang-option {
    display: flex;
    align-items: center;
    gap: var(--spacing-2);
    padding: var(--spacing-3) var(--spacing-4);
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: all var(--transition-fast);
    font-size: var(--font-size-sm);
  }
  
  .lang-option:hover {
    background: var(--color-surface-elevated);
    color: var(--color-text-primary);
  }
  
  .lang-option.active {
    color: var(--color-tech);
    font-weight: var(--font-weight-semibold);
  }
  
  .menu-toggle {
    display: none;
    width: 40px;
    height: 40px;
    background: transparent;
    border: none;
    cursor: pointer;
    position: relative;
  }
  
  .menu-icon,
  .menu-icon::before,
  .menu-icon::after {
    display: block;
    width: 24px;
    height: 2px;
    background: var(--color-text-primary);
    border-radius: var(--radius-full);
    transition: all var(--transition-normal);
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
  }
  
  .menu-icon {
    top: 50%;
    transform: translate(-50%, -50%);
  }
  
  .menu-icon::before {
    content: '';
    top: -8px;
  }
  
  .menu-icon::after {
    content: '';
    top: 8px;
  }
  
  @media (max-width: 768px) {
    .nav {
      position: fixed;
      top: 70px;
      left: 0;
      right: 0;
      background: var(--color-background);
      padding: var(--spacing-6);
      border-bottom: 1px solid var(--color-border);
      opacity: 0;
      visibility: hidden;
      transform: translateY(-10px);
      transition: all var(--transition-normal);
    }
    
    .nav.active {
      opacity: 1;
      visibility: visible;
      transform: translateY(0);
    }
    
    .nav-list {
      flex-direction: column;
      background: transparent;
      border: none;
      padding: 0;
    }
    
    .nav-indicator {
      display: none; /* Hide sliding indicator on mobile */
    }
    
    .nav-link.active {
      background: var(--color-tech); /* Fallback for mobile */
      display: inline-block;
    }
    
    .menu-toggle {
      display: block;
    }
  }
</style>

<script>
  function initNav() {
    const indicator = document.querySelector('.nav-indicator');
    const items = document.querySelectorAll('.nav-link');
    const navList = document.querySelector('.nav-list');
    
    if (!indicator || !navList) return;
    
    function updateIndicator(element) {
      const listRect = navList.getBoundingClientRect();
      const itemRect = element.getBoundingClientRect();
      
      // Calculate position relative to nav-list
      // Subtract 4px to account for the left: 4px offset in CSS
      const relativeLeft = itemRect.left - listRect.left - 4;
      
      indicator.style.width = `${itemRect.width}px`;
      indicator.style.height = `${itemRect.height}px`;
      indicator.style.transform = `translateX(${relativeLeft}px)`;
      indicator.style.opacity = '1';
    }
    
    // Initial position based on active link
    const activeLink = document.querySelector('.nav-link.active');
    if (activeLink) {
      updateIndicator(activeLink);
    }
    
    // Hover effects
    items.forEach(item => {
      item.addEventListener('mouseenter', (e) => {
        updateIndicator(e.target);
      });
    });
    
    // Return to active on mouse leave
    navList.addEventListener('mouseleave', () => {
      const active = document.querySelector('.nav-link.active');
      if (active) {
        updateIndicator(active);
      } else {
        indicator.style.opacity = '0';
      }
    });

    // Mobile menu toggle
    const menuToggle = document.querySelector('.menu-toggle');
    const nav = document.querySelector('.nav');
    
    menuToggle?.addEventListener('click', () => {
      nav?.classList.toggle('active');
    });
  }

  // Run on initial load
  initNav();

  // Run on view transitions
  document.addEventListener('astro:page-load', initNav);
</script>
