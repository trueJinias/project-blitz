---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import GenreCard from '../components/GenreCard.astro';
import { getCollection } from 'astro:content';
import { BackgroundBeams } from '../components/ui/background-beams';

// Get article counts per genre (Japanese only)
const allArticles = await getCollection('articles', ({ id, data }) => !id.startsWith('en-us/') && !id.startsWith('en-in/') && !id.startsWith('hi-in/') && !data.draft);

const genreCounts = allArticles.reduce((acc, article) => {
  const genre = article.data.genre;
  acc[genre] = (acc[genre] || 0) + 1;
  return acc;
}, {} as Record<string, number>);

const genres = ['tech', 'lifestyle', 'news', 'economics'] as const;
---

<BaseLayout title="BLITZ - カテゴリから記事を探す" description="ガジェット、ライフスタイル、レビュー、ニュースなど、多彩なカテゴリからあなたにぴったりの記事が見つかるWebマガジン。">
  <Header />
  
  <main class="home">
    <section class="hero">
      <BackgroundBeams client:load />
      

      
      <div class="hero-content">
        <h1 class="hero-title">
          <span class="title-line title-highlight">Radiant</span>
          <span class="title-line">Wikipedia</span>
        </h1>
        <p class="hero-description">
          creative user interfaces
        </p>
        
        <div class="hero-actions">
          <a href="#explore" class="btn btn-primary">Get Started</a>
          <a href="#learn" class="btn btn-outline">Learn More</a>
        </div>
        
        <div class="scroll-indicator">
          <span>Scroll</span>
          <div class="scroll-line"></div>
        </div>
      </div>
    </section>
    
    <!-- Genre Selection -->
    <section class="genres">
      <div class="container">
        <h2 class="section-title">カテゴリから探す</h2>
        <p class="section-description">カテゴリを選んで記事を探索</p>
        
        <div class="genre-grid">
          {genres.map((genre, index) => (
            <GenreCard 
              genre={genre} 
              count={genreCounts[genre] || 0}
              delay={index * 0.1}
            />
          ))}
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>

<style>
  .home {
    min-height: 100vh;
  }
  
  /* Hero Section */
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }
  
  /* Hero Background styles removed in favor of BackgroundBeams component */
  

  
  .hero-content {
    position: relative;
    z-index: 2;
    text-align: center;
    padding: var(--spacing-6);
    animation: fadeIn 1s ease forwards;
  }
  
  .hero-title {
    font-size: clamp(2.5rem, 8vw, 5rem);
    font-weight: var(--font-weight-bold);
    line-height: 1.1;
    margin-bottom: var(--spacing-6);
  }
  
  .title-line {
    display: block;
  }
  
  .title-highlight {
    background: linear-gradient(135deg, var(--color-tech) 0%, var(--color-review) 50%, var(--color-lifestyle) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .hero-description {
    font-size: var(--font-size-xl);
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto var(--spacing-8);
  }

  .hero-actions {
    display: flex;
    gap: var(--spacing-4);
    justify-content: center;
    margin-bottom: var(--spacing-12);
  }

  .btn {
    padding: var(--spacing-3) var(--spacing-8);
    border-radius: var(--radius-full);
    font-weight: var(--font-weight-medium);
    transition: all 0.2s ease;
    text-decoration: none;
  }

  .btn-primary {
    background: #fff;
    color: #000;
  }

  .btn-outline {
    background: rgba(255, 255, 255, 0.05);
    color: #fff;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
  }
  
  .scroll-indicator {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-2);
    color: var(--color-text-muted);
    font-size: var(--font-size-sm);
    animation: float 2s ease-in-out infinite;
  }
  
  .scroll-line {
    width: 1px;
    height: 40px;
    background: linear-gradient(to bottom, var(--color-tech), transparent);
  }
  
  /* Genre Section */
  .genres {
    padding: var(--spacing-24) 0;
  }
  
  .section-title {
    text-align: center;
    font-size: var(--font-size-3xl);
    margin-bottom: var(--spacing-2);
  }
  
  .section-description {
    text-align: center;
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-12);
  }
  
  .genre-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-6);
  }
  
  @media (max-width: 768px) {
    .genre-grid {
      grid-template-columns: 1fr;
    }
    
    .hero-description {
      font-size: var(--font-size-lg);
    }
  }
  
  @keyframes pulse-glow {
    0%, 100% {
      opacity: 0.5;
      transform: translate(-50%, -50%) scale(1);
    }
    50% {
      opacity: 0.8;
      transform: translate(-50%, -50%) scale(1.1);
    }
  }
</style>
