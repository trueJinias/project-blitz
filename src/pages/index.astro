---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import GenreCard from '../components/GenreCard.astro';
import { getCollection } from 'astro:content';

// Get article counts per genre
const allArticles = await getCollection('articles', ({ data }) => !data.draft);

const genreCounts = allArticles.reduce((acc, article) => {
  const genre = article.data.genre;
  acc[genre] = (acc[genre] || 0) + 1;
  return acc;
}, {} as Record<string, number>);

const genres: Array<'tech' | 'lifestyle' | 'review' | 'news'> = ['tech', 'lifestyle', 'review', 'news'];
---

<BaseLayout title="BLITZ - ジャンルから記事を探す">
  <Header />
  
  <main class="home">
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-bg">
        <div class="hero-gradient"></div>
        <div class="hero-particles"></div>
      </div>
      
      <div class="hero-content">
        <h1 class="hero-title">
          <span class="title-line">ジャンルから</span>
          <span class="title-line title-highlight">記事を探す</span>
        </h1>
        <p class="hero-description">
          興味のあるジャンルを選んで、新しい発見を
        </p>
        
        <div class="scroll-indicator">
          <span>Scroll</span>
          <div class="scroll-line"></div>
        </div>
      </div>
    </section>
    
    <!-- Genre Selection -->
    <section class="genres">
      <div class="container">
        <h2 class="section-title">ジャンルを選ぶ</h2>
        <p class="section-subtitle">気になるジャンルをクリックして記事を探索しよう</p>
        
        <div class="genre-grid">
          {genres.map((genre, index) => (
            <GenreCard 
              genre={genre} 
              count={genreCounts[genre] || 0}
              delay={index * 0.1}
            />
          ))}
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>

<style>
  .home {
    min-height: 100vh;
  }
  
  /* Hero Section */
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }
  
  .hero-bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }
  
  .hero-gradient {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 800px;
    height: 800px;
    background: radial-gradient(circle, rgba(0, 212, 255, 0.15) 0%, transparent 70%);
    animation: pulse-glow 4s ease-in-out infinite;
  }
  
  .hero-particles {
    position: absolute;
    inset: 0;
    background-image: 
      radial-gradient(circle at 20% 30%, rgba(255, 255, 255, 0.03) 1px, transparent 1px),
      radial-gradient(circle at 80% 70%, rgba(255, 255, 255, 0.03) 1px, transparent 1px),
      radial-gradient(circle at 50% 50%, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
    background-size: 100px 100px, 150px 150px, 200px 200px;
  }
  
  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    padding: var(--spacing-6);
    animation: fadeIn 1s ease forwards;
  }
  
  .hero-title {
    font-size: clamp(2.5rem, 8vw, 5rem);
    font-weight: var(--font-weight-bold);
    line-height: 1.1;
    margin-bottom: var(--spacing-6);
  }
  
  .title-line {
    display: block;
  }
  
  .title-highlight {
    background: linear-gradient(135deg, var(--color-tech) 0%, var(--color-review) 50%, var(--color-lifestyle) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .hero-description {
    font-size: var(--font-size-xl);
    color: var(--color-text-secondary);
    max-width: 500px;
    margin: 0 auto var(--spacing-12);
  }
  
  .scroll-indicator {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-2);
    color: var(--color-text-muted);
    font-size: var(--font-size-sm);
    animation: float 2s ease-in-out infinite;
  }
  
  .scroll-line {
    width: 1px;
    height: 40px;
    background: linear-gradient(to bottom, var(--color-tech), transparent);
  }
  
  /* Genre Section */
  .genres {
    padding: var(--spacing-24) 0;
  }
  
  .section-title {
    text-align: center;
    font-size: var(--font-size-3xl);
    margin-bottom: var(--spacing-2);
  }
  
  .section-subtitle {
    text-align: center;
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-12);
  }
  
  .genre-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-6);
  }
  
  @media (max-width: 768px) {
    .genre-grid {
      grid-template-columns: 1fr;
    }
    
    .hero-description {
      font-size: var(--font-size-lg);
    }
  }
  
  @keyframes pulse-glow {
    0%, 100% {
      opacity: 0.5;
      transform: translate(-50%, -50%) scale(1);
    }
    50% {
      opacity: 0.8;
      transform: translate(-50%, -50%) scale(1.1);
    }
  }
</style>
