---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';

// ランダムな404メッセージ（楽しみ要素）
const messages = [
  "ページが見つかりません…異世界に飛ばされたかも？",
  "404 Not Found. 探しているページは存在しないようです。",
  "おっと、行き止まりです。引き返しましょう。",
  "ここはインターネットの果て…ではありませんが、ページはありません。",
];

const randomMessage = messages[Math.floor(Math.random() * messages.length)];
---

<BaseLayout title="404 Not Found | Project Blitz" description="ページが見つかりません">
  <Header />
  
  <main class="error-container">
    <div class="content">
      <div class="glitch-wrapper" data-text="404">
        <h1 class="error-code">404</h1>
      </div>
      <p class="error-message">{randomMessage}</p>
      <div class="actions">
        <a href="/" class="home-button">
          トップページに戻る
        </a>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  .error-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding-top: var(--spacing-20); /* Header height */
    background: var(--color-background);
    color: var(--color-text-primary);
    text-align: center;
  }

  .content {
    padding: var(--spacing-8);
  }

  .error-code {
    font-size: 8rem;
    font-weight: 800;
    line-height: 1;
    margin-bottom: var(--spacing-4);
    background: linear-gradient(135deg, var(--color-tech), var(--color-review));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    position: relative;
  }

  /* Glitch Effect */
  .glitch-wrapper {
    position: relative;
    display: inline-block;
  }

  .glitch-wrapper::before,
  .glitch-wrapper::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.8;
  }

  .glitch-wrapper::before {
    color: #ff00c1;
    clip: rect(44px, 450px, 56px, 0);
    animation: glitch-anim-1 5s infinite linear alternate-reverse;
    text-shadow: -2px 0 #ff00c1;
    z-index: -1;
  }

  .glitch-wrapper::after {
    color: #00fff9;
    clip: rect(44px, 450px, 56px, 0);
    animation: glitch-anim-2 5s infinite linear alternate-reverse;
    text-shadow: -2px 0 #00fff9;
    z-index: -2;
  }
  
  /* Update error-code to allow glitch elements to show */
  .error-code {
    /* Keep existing styles */
    font-size: 8rem;
    font-weight: 800;
    line-height: 1;
    margin-bottom: var(--spacing-4);
    background: linear-gradient(135deg, var(--color-tech), var(--color-review));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    position: relative;
    z-index: 1;
  }

  /* Make pseudo-elements visible (not transparent) */
  .glitch-wrapper::before,
  .glitch-wrapper::after {
    -webkit-text-fill-color: initial;
    background: none;
  }

  /* Keyframes */
  @keyframes glitch-anim-1 {
    0% { clip: rect(30px, 9999px, 10px, 0); transform: skew(0.85deg); }
    5% { clip: rect(70px, 9999px, 90px, 0); transform: skew(-0.85deg); }
    10% { clip: rect(35px, 9999px, 15px, 0); transform: skew(0.15deg); }
    15% { clip: rect(5px, 9999px, 80px, 0); transform: skew(-0.15deg); }
    20% { clip: rect(65px, 9999px, 20px, 0); transform: skew(0.65deg); }
    25% { clip: rect(15px, 9999px, 60px, 0); transform: skew(-0.65deg); }
    30% { clip: rect(85px, 9999px, 40px, 0); transform: skew(0.45deg); }
    35% { clip: rect(45px, 9999px, 5px, 0); transform: skew(-0.45deg); }
    40% { clip: rect(95px, 9999px, 30px, 0); transform: skew(0.25deg); }
    45% { clip: rect(25px, 9999px, 75px, 0); transform: skew(-0.25deg); }
    50% { clip: rect(55px, 9999px, 35px, 0); transform: skew(0.75deg); }
    55% { clip: rect(10px, 9999px, 95px, 0); transform: skew(-0.75deg); }
    60% { clip: rect(75px, 9999px, 50px, 0); transform: skew(0.35deg); }
    65% { clip: rect(40px, 9999px, 25px, 0); transform: skew(-0.35deg); }
    70% { clip: rect(90px, 9999px, 65px, 0); transform: skew(0.55deg); }
    75% { clip: rect(20px, 9999px, 85px, 0); transform: skew(-0.55deg); }
    80% { clip: rect(60px, 9999px, 45px, 0); transform: skew(0.95deg); }
    85% { clip: rect(35px, 9999px, 70px, 0); transform: skew(-0.95deg); }
    90% { clip: rect(80px, 9999px, 15px, 0); transform: skew(0.05deg); }
    95% { clip: rect(50px, 9999px, 60px, 0); transform: skew(-0.05deg); }
    100% { clip: rect(15px, 9999px, 90px, 0); transform: skew(0.85deg); }
  }

  @keyframes glitch-anim-2 {
    0% { clip: rect(65px, 9999px, 100px, 0); transform: skew(0.4deg); }
    5% { clip: rect(25px, 9999px, 60px, 0); transform: skew(-0.4deg); }
    10% { clip: rect(85px, 9999px, 20px, 0); transform: skew(0.9deg); }
    15% { clip: rect(15px, 9999px, 80px, 0); transform: skew(-0.9deg); }
    20% { clip: rect(55px, 9999px, 40px, 0); transform: skew(0.2deg); }
    25% { clip: rect(95px, 9999px, 10px, 0); transform: skew(-0.2deg); }
    30% { clip: rect(35px, 9999px, 70px, 0); transform: skew(0.7deg); }
    35% { clip: rect(75px, 9999px, 30px, 0); transform: skew(-0.7deg); }
    40% { clip: rect(5px, 9999px, 90px, 0); transform: skew(0.5deg); }
    45% { clip: rect(60px, 9999px, 50px, 0); transform: skew(-0.5deg); }
    50% { clip: rect(20px, 9999px, 95px, 0); transform: skew(0.3deg); }
    55% { clip: rect(90px, 9999px, 15px, 0); transform: skew(-0.3deg); }
    60% { clip: rect(40px, 9999px, 65px, 0); transform: skew(0.8deg); }
    65% { clip: rect(80px, 9999px, 25px, 0); transform: skew(-0.8deg); }
    70% { clip: rect(10px, 9999px, 85px, 0); transform: skew(0.1deg); }
    75% { clip: rect(70px, 9999px, 35px, 0); transform: skew(-0.1deg); }
    80% { clip: rect(30px, 9999px, 75px, 0); transform: skew(0.6deg); }
    85% { clip: rect(100px, 9999px, 45px, 0); transform: skew(-0.6deg); }
    90% { clip: rect(50px, 9999px, 5px, 0); transform: skew(0.9deg); }
    95% { clip: rect(85px, 9999px, 55px, 0); transform: skew(-0.9deg); }
    100% { clip: rect(45px, 9999px, 100px, 0); transform: skew(0.4deg); }
  }

  .error-message {
    font-size: 1.5rem;
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-8);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .home-button {
    display: inline-block;
    padding: var(--spacing-3) var(--spacing-8);
    background: var(--color-tech);
    color: white;
    font-weight: 600;
    border-radius: 9999px;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .home-button:hover {
    background: var(--color-tech);
    filter: brightness(1.2);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(37, 99, 235, 0.3);
  }

  @media (max-width: 768px) {
    .error-code {
      font-size: 6rem;
    }
    
    .error-message {
      font-size: 1.25rem;
    }
  }
</style>
