---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';

// ランダムな404メッセージ（楽しみ要素）
const messages = [
  "ページが見つかりません…異世界に飛ばされたかも？",
  "404 Not Found. 探しているページは存在しないようです。",
  "おっと、行き止まりです。引き返しましょう。",
  "ここはインターネットの果て…ではありませんが、ページはありません。",
];

const randomMessage = messages[Math.floor(Math.random() * messages.length)];
---

<BaseLayout title="404 Not Found | Project Blitz" description="ページが見つかりません">
  <Header />
  
  <main class="error-container">
    <div class="content">
      <div class="glitch-wrapper">
        <h1 class="error-code" data-text="404">404</h1>
      </div>
      <p class="error-message">{randomMessage}</p>
      <div class="actions">
        <a href="/" class="home-button">
          トップページに戻る
        </a>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  .error-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding-top: var(--spacing-20); /* Header height */
    background: var(--color-background);
    color: var(--color-text-primary);
    text-align: center;
  }

  .content {
    padding: var(--spacing-8);
  }

  .error-code {
    font-size: 8rem;
    font-weight: 800;
    line-height: 1;
    margin-bottom: var(--spacing-4);
    background: linear-gradient(135deg, var(--color-tech), var(--color-review));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    position: relative;
  }

  /* Simple Glitch Effect */
  .glitch-wrapper {
    position: relative;
    display: inline-block;
  }

  .error-message {
    font-size: 1.5rem;
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-8);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .home-button {
    display: inline-block;
    padding: var(--spacing-3) var(--spacing-8);
    background: var(--color-tech);
    color: white;
    font-weight: 600;
    border-radius: 9999px;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .home-button:hover {
    background: var(--color-tech);
    filter: brightness(1.2);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(37, 99, 235, 0.3);
  }

  @media (max-width: 768px) {
    .error-code {
      font-size: 6rem;
    }
    
    .error-message {
      font-size: 1.25rem;
    }
  }
</style>
