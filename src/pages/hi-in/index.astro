import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import GenreCard from '../../components/GenreCard.astro';
import { getCollection } from 'astro:content';

// Get Hindi (India) articles
const allArticles = await getCollection('articles', ({ id, data }) => 
  id.startsWith('hi-in/') && !data.draft
);

const genreCounts = allArticles.reduce((acc, article) => {
  const genre = article.data.genre;
  acc[genre] = (acc[genre] || 0) + 1;
  return acc;
}, {} as Record<string, number>);

const genres: Array<'tech' | 'lifestyle' | 'news' | 'economics'> = ['tech', 'lifestyle', 'news', 'economics'];
