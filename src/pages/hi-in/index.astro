  .emoji:nth-child(2) { animation-delay: 0.4s; }
  .emoji:nth-child(3) { animation-delay: 0.8s; }
  .emoji:nth-child(4) { animation-delay: 1.2s; }
  .emoji:nth-child(5) { animation-delay: 1.6s; }
  .emoji:nth-child(6) { animation-delay: 2s; }
  .emoji:nth-child(7) { animation-delay: 2.4s; }
  .emoji:nth-child(8) { animation-delay: 2.8s; }
  .emoji:nth-child(9) { animation-delay: 3.2s; }
  .emoji:nth-child(10) { animation-delay: 3.6s; }
  .emoji:nth-child(11) { animation-delay: 0.2s; }
  .emoji:nth-child(12) { animation-delay: 0.6s; }
  .emoji:nth-child(13) { animation-delay: 1s; }
  .emoji:nth-child(14) { animation-delay: 1.4s; }
  
  @keyframes floatEmoji {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-30px) rotate(10deg);
    }
