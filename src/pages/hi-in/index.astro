    border-radius: var(--radius-2xl);
    overflow: hidden;
    transition: all var(--transition-normal);
    animation: fadeInUp 0.6s ease forwards;
    animation-delay: var(--delay);
    opacity: 0;
    min-height: 280px;
    text-decoration: none;
  }
  
