---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import GenreCard from '../../components/GenreCard.astro';
import { getCollection } from 'astro:content';
import { BackgroundBeams } from '../../components/ui/background-beams';

// Get English articles
const allArticles = await getCollection('articles', ({ id, data }) => 
  id.startsWith('en-us/') && !data.draft
);

const genreCounts = allArticles.reduce((acc, article) => {
  const genre = article.data.genre;
  acc[genre] = (acc[genre] || 0) + 1;
  return acc;
}, {} as Record<string, number>);

const genres: Array<'tech' | 'lifestyle' | 'news' | 'economics'> = ['tech', 'lifestyle', 'news', 'economics'];
---

<BaseLayout title="BLITZ.us - Discover Articles by Genre" description="Find the perfect article for you from a variety of genres including gadgets, lifestyle, reviews, and news.">
  <Header />
  
  <main class="home">
    <section class="hero">
      <BackgroundBeams client:load />
      
      <div class="hero-content">
        <h1 class="hero-title">
          <span class="title-line title-highlight">Trendy</span>
          <span class="title-line">Wikipedia</span>
        </h1>
        <p class="hero-description">
          Scroll to explore categories
        </p>
        
        <div class="scroll-indicator">
          <span>Scroll</span>
          <div class="scroll-line"></div>
        </div>
      </div>
    </section>
    
    <!-- Genre Selection -->
    <section class="genres">
      <div class="container">
        <h2 class="section-title">Choose a Category</h2>
        <p class="section-subtitle">Click on a category to explore articles</p>
        
        <div class="genre-grid">
          {genres.map((genre, index) => (
            <GenreCard 
              genre={genre} 
              count={genreCounts[genre] || 0}
              delay={index * 0.1}
              lang="en-us"
            />
          ))}
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>

<style>
  .home {
    min-height: 100vh;
    padding-top: 80px;
  }
  
  .hero {
    position: relative;
    min-height: calc(100vh - 80px);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }
  

  
  .hero-content {
    position: relative;
    z-index: 2;
    text-align: center;
    padding: var(--spacing-6);
    animation: fadeIn 1s ease forwards;
  }
  
  .hero-title {
    font-size: clamp(3rem, 10vw, 6rem);
    font-weight: 800;
    line-height: 1;
    margin-bottom: var(--spacing-8);
    letter-spacing: -0.02em;
  }
  
  .title-line {
    display: block;
  }
  
  .title-highlight {
    background: linear-gradient(to right, #fff, #999);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .hero-description {
    font-size: var(--font-size-xl);
    color: var(--color-text-secondary);
    max-width: 500px;
    margin: 0 auto var(--spacing-12);
  }
  
  .scroll-indicator {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-2);
    color: var(--color-text-muted);
    font-size: var(--font-size-sm);
    animation: float 2s ease-in-out infinite;
  }
  
  .scroll-line {
    width: 1px;
    height: 40px;
    background: linear-gradient(to bottom, var(--color-tech), transparent);
  }
  
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(10px); }
  }
  
  @keyframes pulse-glow {
    0%, 100% { opacity: 0.5; transform: translate(-50%, -50%) scale(1); }
    50% { opacity: 0.8; transform: translate(-50%, -50%) scale(1.1); }
  }
  
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .genres {
    padding: var(--spacing-20) 0;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-6);
  }
  
  .section-title {
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-bold);
    text-align: center;
    margin-bottom: var(--spacing-2);
  }
  
  .section-subtitle {
    text-align: center;
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-12);
  }
  
  .genre-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-6);
  }
  
  .genre-card {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: var(--spacing-8);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-2xl);
    overflow: hidden;
    transition: all var(--transition-normal);
    animation: fadeInUp 0.6s ease forwards;
    animation-delay: var(--delay);
    opacity: 0;
    min-height: 280px;
    text-decoration: none;
  }
  
  .genre-card:hover {
    transform: translateY(-8px) scale(1.02);
    border-color: var(--color);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
  }
  
  .card-glow {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 200px;
    background: var(--gradient);
    opacity: 0;
    transition: opacity var(--transition-normal);
    filter: blur(40px);
  }
  
  .genre-card:hover .card-glow {
    opacity: 0.15;
  }
  
  .card-content {
    position: relative;
    z-index: 1;
  }
  
  .card-icon {
    font-size: var(--font-size-4xl);
    margin-bottom: var(--spacing-4);
    transition: transform var(--transition-spring);
    display: inline-block;
  }
  
  .genre-card:hover .card-icon {
    transform: translateY(-8px);
    animation: iconBounce 0.6s ease;
  }
  
  @keyframes iconBounce {
    0% { transform: translateY(0); }
    50% { transform: translateY(-12px); }
    100% { transform: translateY(-8px); }
  }
  
  .card-title {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    margin-bottom: var(--spacing-2);
    background: var(--gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .card-description {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    margin: 0;
    line-height: var(--line-height-relaxed);
  }
  
  .card-count {
    display: inline-block;
    margin-top: var(--spacing-4);
    padding: var(--spacing-1) var(--spacing-3);
    background: rgba(255, 255, 255, 0.05);
    border-radius: var(--radius-full);
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
  }
  
  .card-arrow {
    position: absolute;
    bottom: var(--spacing-8);
    right: var(--spacing-8);
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-surface-elevated);
    border-radius: var(--radius-full);
    color: var(--color-text-secondary);
    transition: all var(--transition-normal);
  }
  
  .genre-card:hover .card-arrow {
    background: var(--gradient);
    color: var(--color-background);
    transform: translateX(4px);
  }
  
  @media (max-width: 768px) {
    .genre-card {
      min-height: 220px;
      padding: var(--spacing-6);
    }
    
    .card-arrow {
      bottom: var(--spacing-6);
      right: var(--spacing-6);
      width: 40px;
      height: 40px;
    }
  }
</style>
