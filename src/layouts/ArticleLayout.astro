---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ProductLinks from '../components/ProductLinks.astro';

interface Props {
  title: string;
  description: string;
  date: Date;
  genre: string;
  image?: string;
  author?: string;
  tags?: string[];
  product?: string;
  lang?: string;
}

const { title, description, date, genre, image, author, tags, product, lang = 'ja' } = Astro.props;

const genreColors: Record<string, string> = {
  tech: 'var(--color-tech)',
  lifestyle: 'var(--color-lifestyle)',
  economics: 'var(--color-economics)',
  review: 'var(--color-review)',
  news: 'var(--color-news)',
};

const genreLabels: Record<string, string> = {
  tech: 'Tech',
  lifestyle: 'Lifestyle',
  economics: 'Economy',
  review: 'Review',
  news: 'News',
};

const dateLocales: Record<string, string> = {
  ja: 'ja-JP',
  'en-us': 'en-US',
  'en-in': 'en-IN',
};

const formattedDate = new Intl.DateTimeFormat(dateLocales[lang] || 'ja-JP', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
  timeZone: 'UTC',
}).format(date);
---

<BaseLayout title={`${title} | Blog`} description={description} image={image} type="article" lang={lang}>
  <Header />
  
  <main class="article-layout">
    <article class="article">
      <header class="article-header">
        <a href={`/genre/${genre}`} class="genre-tag" style={`--genre-color: ${genreColors[genre]}`}>
          {genreLabels[genre]}
        </a>
        <h1 class="article-title">{title}</h1>
        <div class="article-meta">
          <time datetime={date.toISOString()}>{formattedDate}</time>
          {author && <span class="author">by {author}</span>}
        </div>
        {tags && tags.length > 0 && (
          <div class="article-tags">
            {tags.map((tag) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )}
      </header>
      
      {image && (
        <div class="article-hero">
          <img src={image} alt={title} />
        </div>
      )}
      
      <div class="article-content">
        <slot />
        
        {Astro.props.frontmatter?.product && (
          <ProductLinks keyword={Astro.props.frontmatter.product} />
        )}
        {/* Support passing product via props if frontmatter isn't directly available in layout props context (depends on astro version) */}
        {!Astro.props.frontmatter?.product && (Astro.props as any).product && (
           <ProductLinks keyword={(Astro.props as any).product} />
        )}
      </div>
    </article>
  </main>
  
  <Footer />
</BaseLayout>

<style>
  .article-layout {
    padding-top: var(--spacing-20);
    padding-bottom: var(--spacing-20);
  }
  
  .article {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 var(--spacing-6);
  }
  
  .article-header {
    text-align: center;
    margin-bottom: var(--spacing-12);
    animation: fadeInUp 0.6s ease forwards;
  }
  
  .genre-tag {
    display: inline-block;
    padding: var(--spacing-2) var(--spacing-4);
    background: var(--genre-color);
    color: var(--color-background);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    border-radius: var(--radius-full);
    margin-bottom: var(--spacing-4);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .article-title {
    font-size: var(--font-size-4xl);
    margin-bottom: var(--spacing-4);
    line-height: 1.3;
  }
  
  .article-meta {
    color: var(--color-text-muted);
    font-size: var(--font-size-sm);
    display: flex;
    justify-content: center;
    gap: var(--spacing-4);
  }
  
  .article-tags {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: var(--spacing-2);
    margin-top: var(--spacing-4);
  }
  
  .tag {
    padding: var(--spacing-1) var(--spacing-3);
    background: var(--color-surface);
    color: var(--color-text-secondary);
    font-size: var(--font-size-xs);
    border-radius: var(--radius-full);
    border: 1px solid var(--color-border);
  }
  
  .article-hero {
    margin-bottom: var(--spacing-12);
    border-radius: var(--radius-xl);
    overflow: hidden;
    animation: fadeIn 0.8s ease forwards;
    animation-delay: 0.2s;
    opacity: 0;
  }
  
  .article-hero img {
    width: 100%;
    aspect-ratio: 16/9;
    object-fit: cover;
  }
  
  .article-content {
    animation: fadeIn 0.8s ease forwards;
    animation-delay: 0.4s;
    opacity: 0;
  }
  
  .article-content :global(h2) {
    margin-top: var(--spacing-12);
    margin-bottom: var(--spacing-4);
    font-size: var(--font-size-2xl);
    padding-bottom: var(--spacing-2);
    border-bottom: 1px solid var(--color-border);
  }
  
  .article-content :global(h3) {
    margin-top: var(--spacing-8);
    margin-bottom: var(--spacing-3);
    font-size: var(--font-size-xl);
  }
  
  .article-content :global(p) {
    margin-bottom: var(--spacing-6);
    line-height: var(--line-height-relaxed);
  }

  .article-content :global(strong),
  .article-content :global(em),
  .article-content :global(b),
  .article-content :global(i) {
    background: linear-gradient(transparent 60%, rgba(0, 122, 255, 0.3) 60%);
    font-weight: bold; /* Optional: make em bold too if user implies 'formatted text' */
    font-style: inherit; /* Reset italic if desired, or keep it */
    color: inherit; 
  }
  
  .article-content :global(ul),
  .article-content :global(ol) {
    margin-bottom: var(--spacing-6);
    padding-left: var(--spacing-6);
    color: var(--color-text-secondary);
  }
  
  .article-content :global(li) {
    margin-bottom: var(--spacing-2);
  }
  
  .article-content :global(blockquote) {
    margin: var(--spacing-6) 0;
    padding: var(--spacing-4) var(--spacing-6);
    border-left: 4px solid var(--color-tech);
    background: var(--color-surface);
    border-radius: 0 var(--radius-md) var(--radius-md) 0;
    font-style: italic;
    color: var(--color-text-secondary);
  }
  
  .article-content :global(pre) {
    margin-bottom: var(--spacing-6);
    padding: var(--spacing-4);
    background: var(--color-surface);
    border-radius: var(--radius-lg);
    overflow-x: auto;
  }
  
  .article-content :global(code) {
    font-family: 'JetBrains Mono', monospace;
    font-size: var(--font-size-sm);
  }
  
  .article-content :global(a) {
    color: var(--color-tech);
    text-decoration: underline;
    text-underline-offset: 3px;
  }
  
  .article-content :global(a:hover) {
    color: var(--color-review);
  }
  
  .article-content :global(img) {
    margin: var(--spacing-8) 0;
    border-radius: var(--radius-lg);
  }
  
  .article-content :global(table) {
    width: 100%;
    margin: var(--spacing-6) 0;
    border-collapse: collapse;
    background: var(--color-surface);
    border-radius: var(--radius-lg);
    overflow: hidden;
  }
  
  .article-content :global(thead) {
    background: var(--color-surface-elevated);
  }
  
  .article-content :global(th) {
    padding: var(--spacing-3) var(--spacing-4);
    text-align: left;
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    border-bottom: 2px solid var(--color-border);
  }
  
  .article-content :global(td) {
    padding: var(--spacing-3) var(--spacing-4);
    border-bottom: 1px solid var(--color-border);
    color: var(--color-text-secondary);
  }
  
  .article-content :global(tr:last-child td) {
    border-bottom: none;
  }
  
  .article-content :global(tr:hover) {
    background: rgba(255, 255, 255, 0.03);
  }
  
  @media (max-width: 768px) {
    .article-title {
      font-size: var(--font-size-3xl);
    }
  }
</style>
